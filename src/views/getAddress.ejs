<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>주차 공유 시스템</title>
  </head>
  <body>
    <script src="http://dmaps.daum.net/map_js_init/postcode.v2.js"></script>

    <script>
      new daum.Postcode({
        oncomplete: function (data) {
          if (data.userSelectedType == "R") {
            // userSelectedType : 검색 결과에서 사용자가 선택한 주소의 타입

            // return type : R - roadAddress, J : jibunAddress

            // TestApp 은 안드로이드에서 등록한 이름
            window.Athome.setAddress(
              data.zonecode,
              data.roadAddress,
              data.buildingName
            );
          } else {
            window.Athome.setAddress(
              data.zonecode,
              data.jibunAddress,
              data.buildingName
            );
          }
        },

        theme: {
          bgColor: "#b3e5fc",
          searchBgColor: "#b3e5fc", //검색창 배경색
          queryTextColor: "#000000", //검색창 글자색
        },
      }).open();
    </script>
  </body>
</html>
